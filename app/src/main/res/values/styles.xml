<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardItem">
        <item name="android:backgroundTint">@color/light_white</item>
    </style>

    <style name="BackgroundFront">
        <item name="android:background">@color/light_white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="TabTeamText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="TextTeamSelect">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="TabText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TittleTextBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextGrey">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextGreySmall">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextScore">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>